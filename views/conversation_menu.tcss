#content-container {
    width: 100%;
    margin-left: 1;
    margin-right: 1;
    height: 80%;
}

#scroll-container {
    width: 100%;
    height: 100%;
}

#prompt-input-row {
    width: 100%;
    align: center bottom;
    margin-bottom: 1;
}

#conv-window-title_bar {
    text-align: center;
    align: center middle;
    text-style: bold;
    height: 3;
    color: aqua;
    background: $boost;
    width: 100%;
}
#conv-window-title_text {
    padding: 1 1 1 1;
    text-align: center;
    align: center middle;
    height: 3;
    width: 100%;
    background: $boost;
}
#prompt-error-hint {
    text-align: center;
    color: gray;
    text-style: italic;
}
